<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--bootstrap-->
    <bean id="bootstrap" class="com.goit.projects.restaurant.Bootstrap">
        <property name="employeeController" ref="employeeController"/>
        <property name="foodCategoryController" ref="categoryController"/>
        <property name="ingredientController" ref="ingredientController"/>
        <property name="dishController" ref="dishController"/>
        <property name="menuController" ref="menuController"/>
    </bean>

    <!--data source implementation-->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${jdbc.driver.class}"/>
        <property name="jdbcUrl" value="${jdbc.url}"/>
        <property name="user" value="${jdbc.user}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="minPoolSize" value="${jdbc.min.connections}"/>
        <property name="maxPoolSize" value="${jdbc.max.connections}"/>
        <property name="acquireIncrement" value="${jdbc.acquire.increment}"/>
    </bean>

    <!--property file support-->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:jdbc.properties"/>
    </bean>

    <!--Spring-transaction manager-->
    <bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager" id="txManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!--Spring-jdbcTemplate -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!--jdbcEmployeeDAO-->
    <bean id="employeeDAO" class="com.goit.projects.restaurant.model.jdbc.JdbcEmployeeDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!--employeeController-->
    <bean id="employeeController" class="com.goit.projects.restaurant.controllers.EmployeeController">
        <property name="employeeDAO" ref="employeeDAO"/>
    </bean>

    <!--foodCategoryDAO-->
    <bean id="jdbcFoodCategoryDAO" class="com.goit.projects.restaurant.model.jdbc.JdbcFoodCategoryDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!--categoryController-->
    <bean id="categoryController" class="com.goit.projects.restaurant.controllers.FoodCategoryController">
        <property name="foodCategoryDAO" ref="jdbcFoodCategoryDAO"/>
    </bean>

    <!--ingredientDAO-->
    <bean id="jdbcIngredientDAO" class="com.goit.projects.restaurant.model.jdbc.JdbcIngredientDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!--ingredientController-->
    <bean id="ingredientController" class="com.goit.projects.restaurant.controllers.IngredientController">
        <property name="ingredientDAO" ref="jdbcIngredientDAO"/>
    </bean>

    <!--jdbcDishDAO-->
    <bean id="jdbcDishDAO" class="com.goit.projects.restaurant.model.jdbc.JdbcDishDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!--dishController-->
    <bean id="dishController" class="com.goit.projects.restaurant.controllers.DishController">
        <property name="dishDAO" ref="jdbcDishDAO"/>
    </bean>

    <!--jdbcMenuDAO-->
    <bean id="jdbcMenuDAO" class="com.goit.projects.restaurant.model.jdbc.JdbcMenuDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!--menuController-->
    <bean id="menuController" class="com.goit.projects.restaurant.controllers.MenuController">
        <property name="menuDAO" ref="jdbcMenuDAO"/>
    </bean>

</beans>